@model ContractManager.Share.DTOs.FundingResourceDto

@{
	ViewData["Title"] = "AddFundingResource";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add FundingResource</h1>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="AddFundingResource">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group mb-2">
				<label asp-for="Fund" class="control-label"></label>
				<input asp-for="Fund" class="form-control" />
				<span asp-validation-for="Fund" class="text-danger"></span>
			</div>
			<div class="form-group mb-2">
				<label asp-for="Ownership" class="control-label"></label>
				<input asp-for="Ownership" class="form-control" />
				<span asp-validation-for="Ownership" class="text-danger"></span>
			</div>
			<input asp-for="ContractId" value=@ViewBag.ContractId class="form-control" type="hidden" />
			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

