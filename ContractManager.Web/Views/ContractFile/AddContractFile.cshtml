@model ContractManager.Share.DTOs.UploadFileDto

@{
    ViewData["Title"] = "AddContractFile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>AddContractFile</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddContractFile" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
				<label class="control-label">New File</label>
				<input asp-for="File" class="form-control" />
			</div>
            <input asp-for="ContractId" value=@ViewBag.ContractId class="form-control" type="hidden" />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

