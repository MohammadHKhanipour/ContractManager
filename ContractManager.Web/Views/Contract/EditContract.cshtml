@model ContractManager.Share.DTOs.ContractDto

@{
	ViewData["Title"] = "EditContract";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit Contract</h1>

<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="EditContract">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group mb-2">
				<label asp-for="Number" class="control-label"></label>
				<input asp-for="Number" class="form-control" value="@Model.Number"/>
				<span asp-validation-for="Number" class="text-danger"></span>
			</div>
			<div class="form-group mb-2">
				<label asp-for="Subject" class="control-label"></label>
				<input asp-for="Subject" class="form-control" value="@Model.Subject"/>
				<span asp-validation-for="Subject" class="text-danger"></span>
			</div>
			<div class="form-group mb-2">
				<label asp-for="ContractType" class="control-label"></label>
				<div class="input-group">
					<select class="form-select" asp-for=ContractType value="@Model.ContractType">
						<option>Consulting</option>
						<option>Contractor</option>
						<option>Volume</option>
						<option>Project</option>
					</select>
				</div>
				<span asp-validation-for="ContractType" class="text-danger"></span>
			</div>
			<div class="form-group mb-2">
				<label asp-for="ContractStatus" class="control-label"></label>
				<div class="input-group">
					<select class="form-select" asp-for=ContractStatus value="@Model.ContractStatus">
						<option>Finished</option>
						<option>InProgress</option>
					</select>
				</div>
				<span asp-validation-for="ContractStatus" class="text-danger"></span>
			</div>
			<div class="form-group mb-2">
				<label asp-for="PaymentType" class="control-label"></label>
				<div class="input-group">
					<select class="form-select" asp-for=PaymentType value="@Model.PaymentType">
						<option>Cash</option>
						<option>NonCash</option>
					</select>
				</div>
				<span asp-validation-for="PaymentType" class="text-danger"></span>
			</div>
			<div class="form-group mb-2">
				<label asp-for="Cost" class="control-label"></label>
				<input asp-for="Cost" class="form-control" value="@Model.Cost" />
				<span asp-validation-for="Cost" class="text-danger"></span>
			</div>
			<div class="form-group mb-2">
				<label asp-for="ContractSide" class="control-label"></label>
				<input asp-for="ContractSide" class="form-control" value="@Model.ContractSide" />
				<span asp-validation-for="ContractSide" class="text-danger"></span>
			</div>
			<div class="form-group mb-2">
				<label asp-for="StartDate" class="control-label"></label>
				<input asp-for="StartDate" class="form-control" value="@Model.StartDate" />
				<span asp-validation-for="StartDate" class="text-danger"></span>
			</div>
			<div class="form-group mb-2">
				<label asp-for="DueDate" class="control-label"></label>
				<input asp-for="DueDate" class="form-control" value="@Model.DueDate" />
				<span asp-validation-for="DueDate" class="text-danger"></span>
			</div>
			<div class="form-group mb-2">
				<label asp-for="FinalCost" class="control-label"></label>
				<input asp-for="FinalCost" class="form-control" value="@Model.FinalCost" />
				<span asp-validation-for="FinalCost" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Edit" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
	}
